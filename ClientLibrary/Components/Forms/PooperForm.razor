@using Microsoft.Extensions.Localization
@using ClientLibrary.Resources
<EditForm OnValidSubmit="(async () => await OnValidSubmit())" Model="@ViewModel.Data">
    <MudImage Src="@ViewModel.Data.Image"  />
            <MudTextField T="string" Label="Name" @bind-Value="ViewModel.Data.PooperAlias" @bind-Text="ViewModel.Data.PooperAlias"></MudTextField>
            <MudTextField  T="string" Label="Name" @bind-Value="ViewModel.Data.Description" @bind-Text="ViewModel.Data.Description"></MudTextField>
            <MudNumericField T="int" Label="Name" @bind-Value="ViewModel.Data.AmountOfPoops"></MudNumericField>
    
    <MudFileUpload T="IBrowserFile" FilesChanged="UploadFilesAsync">
        <ButtonTemplate Context="productDetailContext">
            <MudFab HtmlTag="label"
                    Color="Color.Success"
                    Icon="@Icons.Material.Filled.Upload"
                    for="@productDetailContext"/>
        </ButtonTemplate>
    </MudFileUpload>
    <MudButton ButtonType="ButtonType.Submit"  Color="Color.Primary">@Localizer.GetString(ClientResourceConstants.SavePooper).Value</MudButton>
    <MudInputLabel>WasNotFound</MudInputLabel>
    <MudInputLabel>@NotFound</MudInputLabel>
    <MudInputLabel>SearchedLocation</MudInputLabel>
    <MudInputLabel>@SearchedLocation</MudInputLabel>
    <MudInputLabel>LocTestName</MudInputLabel>
    <MudInputLabel>@LocTestName</MudInputLabel>
</EditForm >
